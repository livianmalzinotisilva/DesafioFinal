<mvc:View
    controllerName="app.l4desafio.app.controller.Relatorio"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Page showHeader="true" title="Relatorio" titleAlignment="Center">
        <content>
    
            <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop " header="Funcionarios"  press="press" width="25%">
		        <TileContent unit="Unit" footer="Footer Text">
			        <NumericContent value="10" icon="sap-icon://line-charts" withMargin="false" />
		        </TileContent>
	        </GenericTile>                   
               
	        <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Funcionarios em home office"  press="press">
		        <TileContent unit="Unit" footer="Footer Text">
			        <NumericContent value="12" withMargin="false" />
		        </TileContent>
	        </GenericTile>

            <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Funcionarios Contaminados "  press="press">
		        <TileContent unit="Unit" footer="Footer Text">
			        <NumericContent value="25" withMargin="false" />
		        </TileContent>
	        </GenericTile>

             <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Casos ativos "  press="press">
		        <TileContent unit="Unit" footer="Footer Text">
			        <NumericContent value="25" withMargin="false" />
		        </TileContent>
	        </GenericTile>

            <Text text="Casos por Setor" width="150%"/>
            
            <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop " header="Recursos Humanos"  press="press" width="25%">
		        <TileContent unit="Unit" footer="Footer Text">
			        <NumericContent value="10" icon="sap-icon://line-charts" withMargin="false" />
		        </TileContent>
	        </GenericTile>                   
               
	        <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Financeiro"  press="press">
		        <TileContent unit="Unit" footer="Footer Text">
			        <NumericContent value="12" withMargin="false" />
		        </TileContent>
	        </GenericTile>

            <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Projetos "  press="press">
		        <TileContent unit="Unit" footer="Footer Text">
			        <NumericContent value="25" withMargin="false" />
		        </TileContent>
	        </GenericTile>


        </content>
        <footer>
            <OverflowToolbar >
                <ToolbarSpacer/>
                <Button text="Confirmar" type="Accept" press="onConfirmar" width="12%"/>
                <ToolbarSpacer/>
            </OverflowToolbar>
        </footer>
    </Page>		
</mvc:View>